@model IEnumerable<BrewingSite.Models.Recipe>

@{
    ViewBag.Title = "All Recipes";
}

<h2>All Recipes</h2>


<table class="table">
    <tr>
        <th>
            Recipe Name
        </th>
        <th>
            Author
        </th>
        <th>
            @Html.DisplayNameFor(model => model.styleId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.authorId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.styleId)
        </td>
        <td>
            @Html.ActionLink("Details", "Recipe", new { id = item.id.ToString() })
        </td>
    </tr>
}

</table>
