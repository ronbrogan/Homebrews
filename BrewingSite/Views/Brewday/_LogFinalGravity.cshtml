@model BrewingSite.Models.BrewdayMeasurement

@using (Html.BeginForm("logFinalGravity", "Brewday"))
{
    @Html.AntiForgeryToken()
    
    <table class="table">
        <tr>
            <td>Fermenter FG</td>
            <td>
                @Html.EditorFor(model => model.finalGravityReal, new { htmlAttributes = new { @class = "form-control", @style = "width: 240px" } })
                @Html.ValidationMessageFor(model => model.finalGravityReal, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Fermenter Volume (gal)</td>
            <td>
                @Html.EditorFor(model => model.finalGravityVolume, new { htmlAttributes = new { @class = "form-control", @style = "width: 240px" } })
                @Html.ValidationMessageFor(model => model.finalGravityVolume, "", new { @class = "text-danger" })
            </td>
        </tr>

    </table>

}
