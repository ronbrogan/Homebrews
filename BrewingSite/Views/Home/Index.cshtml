@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Ho.mebre.ws</h1>
    <p class="lead">Homebrews is a simple webapp to assist the average hombrewer in creating and managing recipes. </p>
</div>

